#!/usr/bin/env node

var fs = require('fs')

var pngs = fs.readdirSync('png'),
    i = pngs.length

process.stdout.write("... | ... | ... | ... \n")
process.stdout.write("--- | --- | --- | --- \n")

while(i--) {
  var png = pngs[i]

  if(!(/\.png$/i).test(png))
    continue

  if(i % 4 == 0) {
    process.stdout.write("![](png/" + png + ") \n")
  } else {
    process.stdout.write("![](png/" + png + ") | ")
  }
}